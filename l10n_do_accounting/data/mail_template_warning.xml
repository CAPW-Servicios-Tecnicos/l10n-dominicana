<?xml version="1.0" ?>
<odoo>
    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_warning_ncf" model="mail.template">
            <field name="name">Latam NCF: Send by email</field>
            <field name="model_id" ref="ir.sequence"/>
            <field name="email_from">${(object.invoice_user_id.email_formatted or user.email_formatted) |safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="subject">NCF Warning</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">

    </p>
</div>
            </field>
            <field name="report_template" ref="account_invoices_warning_ncf"/>
            <field name="report_name">''}</field>
            <field name="lang">${object.company_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>