<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_journal_form_plus" model="ir.ui.view">
        <field name="model">account.journal</field>
        <field name="name">account.journal.form.plus</field>
        <field name="inherit_id" ref="l10n_latam_invoice_document.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="manage_sequence_internal" attrs="{'invisible': ['|', ('l10n_latam_company_use_documents', '=', False), ('type', 'not in', ['purchase','sale'])]}"/>
                <field name="l10n_latam_country_code" invisible="1"/>
            </xpath>
            <xpath expr="//sheet/notebook" position="inside">
                <page name="l10n_do_sequences" string="NCF Sequences" attrs="{'invisible': ['|', ('manage_sequence_internal', '=', False), ('l10n_latam_country_code', '!=', 'DO')]}">
                    <field name="l10n_do_sequence_ids" nolabel="1" colspan="2">
                        <tree create="false" delete="false" editable="top" default_order="id">
                            <field name="name" readonly="True" string="Sequence"/>
                            <field name="number_next_actual" string="Next Number"/>
                            <field name="l10n_do_warning_ncf" string="Warning Date"/>
                            <field name="l10n_do_expiration_date" string="Expiration Date"/>
                            <field name="id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>