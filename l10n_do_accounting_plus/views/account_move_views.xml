<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_plus" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='journal_div']" position="after">
                    <label for="manual_currency_rate" attrs="{'invisible': [('is_currency_manual', '=', True)]}"/>
                    <div>
                        <field name="is_currency_manual" invisible="1"/>
                        <field name="manual_currency_rate" attrs="{
                        'invisible': [('is_currency_manual', '=', True)],
                        'readonly': [('state', '!=', 'draft')]}"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>