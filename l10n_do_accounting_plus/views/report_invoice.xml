        <template id="report_invoice_document_inherited_plus" inherit_id="l10n_do_accounting.document_tax_totals">
            <xpath expr="//t[@t-set='l10n_do_amounts']" position="after">

                <t t-if="o.total_descontado > 0">
                    <tr class="border-black">
                        <td>
                            <strong>Subtotal antes del descuento</strong>
                        </td>
                        <td class="text-right">
                            <span t-att-class="oe_subtotal_footer_separator" t-esc="o.total_without_discount"
                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </t>
                <t t-if="o.total_descontado > 0">
                    <tr class="border-black">
                        <td>
                            <strong>Total Descontado</strong>
                        </td>
                        <td class="text-right">
                            <span t-att-class="oe_subtotal_footer_separator" t-esc="o.total_descontado"
                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </t>
            </xpath>
        </template>

