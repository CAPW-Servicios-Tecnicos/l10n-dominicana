<?xml version="1.0" encoding="UTF-8"?>
<templates id="template">
    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-receipt')]" position="replace">
            <div class="pos-receipt">
            <div class="pos-receipt-center-align">
            <t t-if="receipt.company.logo">
                <img class="pos-receipt-logo" t-att-src="receipt.company.logo" alt="Logo"/>
                <br/>
            </t>
            <t t-if="!receipt.company.logo">
                    <t t-esc="receipt.company.name" />
                <br/>
            </t>
            <t t-if="receipt.company.street">
                        <t t-esc="receipt.company.street"/>,
                    </t>
             <t t-if="receipt.company.street2">
                        <t t-esc="receipt.company.street2"/>
                    </t>
            <t t-if="receipt.company.vat">
                        <br/>
                        <strong>RNC:</strong>
                        <t t-esc="receipt.company.vat"/>
                        <br/>
                    </t>

                <br/>
                    <t t-esc="receipt.name"/>
                    <br/>

                <t t-set="order" t-value="env.pos.get_order()"/>

                <t t-if="order.get_to_invoice_type()">
                        <div class="pos-receipt-center-align dotted_ticket_title">
                            <strong>Factura de
                                <t t-esc="order.get_latam_document_type().name"/>

                            </strong>
                            <br/>


                            <strong>NCF:
                                <span id="ncf"/>
                                <span style="display: none !important;"> <t t-esc="order.get_ncf()"/></span>
                            </strong>
<!--                            <script>-->
<!--                                $(document).ready(function () {-->
<!--                                console.log("ESTA CORRECTO");-->
<!--                                $("span.next_text").on('click', function(event) {-->
<!--                                    console.log("CLICK EN BOTON");-->
<!--                                    setTimeout(() => {-->
<!--                                        let ncf = localStorage.getItem('ncf');-->
<!--                                        console.log(ncf);-->
<!--                                        $("#ncf").text(ncf.replace(/['"]+/g, ''));-->
<!--                                    }, 1500);-->
<!--                                });-->
<!--                            });-->
<!--                            </script>-->
                            <t t-if="order.l10n_do_is_return_order">
                                <br/>
                                <strong>NCF Modificado:
                                    <t t-esc="order.l10n_do_origin_ncf"/>
                                </strong>
                            </t>

                                <br/>
                                <strong>Válida hasta:
                                    <t t-esc="order.l10n_do_ncf_expiration_date"/>
                                </strong>

                        </div>
                    </t>
                <t t-else="">
                        <div class="pos-receipt-center-align dotted_ticket_title">
                            <strong>Recibo de venta
                            </strong>
                            <br/>

                        </div>
                    </t>

            <div class="pos-receipt-contact" style="text-align: left">
                    <div class="receipt-phone">
                    <strong>Fecha..:</strong>
                    <t t-if="receipt.date.localestring">
                    <div><t t-esc="receipt.date.localestring" /></div>
                </t>
                <t t-else="">
                    <div><t t-esc="receipt.date.validation_date" /></div>
                </t>
                    <br/>
                     <t t-set="client" t-value="env.pos.get_client()"/>
                    <t t-if="client">
                        <strong>Cliente..:</strong>
                        <t t-esc="client.name || ''"/>
                        <br/>
                        <t t-if="client.vat">
                            <strong>RNC/Céd..:</strong>
                            <t t-esc="client.vat"/>
                            <br/>
                        </t>
                        <t t-if="client.phone">
                            <strong>Telefono..:</strong>
                            <t t-esc="client.phone"/>
                            <br/>
                        </t>
                        <t t-if="client.barcode">
                            <strong>Código..:</strong>
                            <t t-esc="client.barcode"/>
                            <br/>
                        </t>
                    </t>

                    <strong>Telefono Compañia:</strong>
                    <t t-esc="env.pos.company.phone || ''"/>
                    <br/>
                </div>
                <div class="receipt-phone">
                    <strong>Cajero/a.:</strong>
                    <t t-esc="env.pos.user.name"/>
                </div>
                </div>


                <t t-if="receipt.header_html">
                    <t t-raw="receipt.header_html" />
                </t>
                <t t-if="!receipt.header_html and receipt.header">
                    <div style="white-space:pre-line"><t t-esc="receipt.header" /></div>
                </t>
                <t t-if="env.pos.config.seller_and_cashier_ticket">
                <t t-if="receipt.cashier">
                    <t t-if="receipt.cashier.name != env.pos.user.name">
                            <div class="receipt-phone">
                                <strong>Vendedor/a.:</strong>
                                <t t-esc="receipt.cashier.name"/>
                            </div>
                        </t>
                </t>
                </t>
            </div>
            <br />
            <div style="border-bottom: 1px solid black;"/>
            <!-- Orderlines -->

            <div class="orderlines container" style="font-size: 12px !important;">
                <table class="receipt-orderlines">
                    <thead>
                        <tr>
                            <th class="pos-receipt-center-align" width="13%">
                                <strong>Cant.</strong>
                            </th>
                            <th width="35%">
                                <strong>Producto</strong>
                            </th>
                            <th width="16%">
                                <strong>$/Und.</strong>
                            </th>
                            <th width="12%">
                                <strong>ITBIS</strong>
                            </th>
                            <th class="pos-right-align" width="20%" style="text-align: right">
                                <strong>Valor</strong>
                            </th>
                            <th width="4%">
                                <strong></strong>
                            </th>
                        </tr>
                    </thead>
                    <tr>
                        <td>
                            <div style="border-bottom: 1px solid black;"/>
                        </td>
                        <td>
                            <div style="border-bottom: 1px solid black;"/>
                        </td>
                        <td>
                            <div style="border-bottom: 1px solid black;"/>
                        </td>
                        <td>
                            <div style="border-bottom: 1px solid black;"/>
                        </td>
                        <td>
                            <div style="border-bottom: 1px solid black;"/>
                        </td>
                        <td>
                            <div style="border-bottom: 1px solid black;"/>
                        </td>
                    </tr>
                    <tr t-foreach="receipt.orderlines" t-as="line" t-key="line.id">
                        <td class="pos-receipt-center-align" width="13%">
                            <t t-esc="line.quantity"/>
                        </td>
                        <td width="35%">
                            <t t-esc="line.product_name_wrapped[0]" />
                            <WrappedProductNameLines line="line" />

                        </td>
                        <td width="16%">
                            <t t-esc="env.pos.format_currency_no_symbol(line.price)" />
                        </td>
                        <td width="12%">
                            <t t-esc="env.pos.format_currency_no_symbol(line.tax_ids_after_fiscal_position)"/>
                        </td>
                        <td class="pos-right-align" width="20%">
                           <t t-esc="env.pos.format_currency_no_symbol(line.quantity * line.price)"/>
                        </td>
                        <td width="4%" class="text-left">

                            <t t-if="line.tax_ids_after_fiscal_position">

                            </t>
                            <t t-else="">

                                 <strong>E</strong>
                            </t>
                        </td>
                    </tr>
                </table>
            </div>
            <!--TOTAL-->
            <div class="receipt-total">
                    <div class="pos-receipt-right-align">
                        SubTotal: <t t-esc="env.pos.format_currency_no_symbol(receipt.subtotal)"/>

                    </div>
                    <br/>
                    <t t-foreach="receipt.tax_details" t-as="tax" t-key="tax.name">
                    <div class="responsive-price">
                        <t t-esc="tax.name" />
                        <span t-esc='env.pos.format_currency_no_symbol(tax.amount)' class="pos-receipt-right-align"/>
                    </div>
                </t>
                    <t t-if="receipt.total_discount">
                        <td class="pos-receipt-right-align">
                            Descuento: <span t-esc="env.pos.format_currency(receipt.total_discount)"/>
                        </td>
                        <br/>
                    </t>
                </div>
             <div class="emph">
                    <div class="pos-receipt-right-align">
                        <strong>
                            Total: <span t-esc="env.pos.format_currency(order.get_total_with_tax())"/>
                        </strong>
                    </div>
                    <br/>
                </div>
                <br/>

            <!-- Payment Lines -->
            <div class="receipt-paymentlines">
                        <t t-foreach="receipt.paymentlines" t-as="line" t-key="line.cid">
                            <div class="pos-receipt-right-align">
                                <t t-esc="line.name" />:
                                <span t-esc="env.pos.format_currency_no_symbol(line.amount)" class="pos-receipt-right-align ml-2"/>
                            </div>
                        </t>
            </div>
            <br/>

            <div class="pos-receipt-amount receipt-change">
                CHANGE
                <span t-esc="env.pos.format_currency(receipt.change)" class="pos-receipt-right-align"/>
            </div>
            <br/>



            <div class="before-footer" />

            <!-- Footer -->
           <div t-if='receipt.footer_html'  class="pos-receipt-center-align">
                    <t t-raw='receipt.footer_html'/>
                </div>

                <div t-if='!receipt.footer_html and receipt.footer'  class="pos-receipt-center-align" style="white-space:pre-line">
                    <t t-esc='receipt.footer'/>
                </div>


        </div>
        </xpath>

    </t>
</templates>
