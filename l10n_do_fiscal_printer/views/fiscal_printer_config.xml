        <record id="fiscal_printer_config_act_window" model="ir.actions.act_window">
            <field name="name">Fiscal Printer Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fiscal.printer.config</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Aqui se creara las impresoras fiscales.
                </p>
            </field>
        </record>

        <menuitem name="Impresora Fiscal" id="fiscal_printer_config_menu" parent="account.menu_finance_configuration" action="fiscal_printer_config_act_window"/>

