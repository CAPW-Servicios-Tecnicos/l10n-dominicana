<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="fiscal_printer_config_form_view" model="ir.ui.view">
            <field name="name">fiscal.printer.config.form</field>
            <field name="model">fiscal.printer.config</field>
            <field name="arch" type="xml">
                <form string="Fiscal Printer Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="host" />
                        </group>
                        <group>
                            <field name="print_copy"/>
                            <field name="subsidiary"/>
                            <field name="state"/>
                        </group>
                    </group>
                </sheet>
                </form>
            </field>
        </record>

        <record id="fiscal_printer_config_tree_view" model="ir.ui.view">
            <field name="name">fiscal.printer.config.tree</field>
            <field name="model">fiscal.printer.config</field>
            <field name="arch" type="xml">
                <tree string="Fiscal Printers">
                    <field name="name"/>
                    <field name="host"/>
                </tree>
            </field>
        </record>

